<div
  class="
    flex
    flex-col
    gap-8
    my-16
  "
>
  <div
    class="
      flex
      flex-col
    "
  >
    <h1
      class="
        font-bold
        leading-snug
        text-4xl
      "
    >
      <%= listing.title %>
    </h1>

    <h4
      class="
        leading-snug
        text-xl
      "
    >
      <%= listing.listing_type&.title %>
      <span>in</span>
      <%= link_to(listing.place.title, v1_place_path(listing.place), class: "underline") %>
    </h4>
  </div>

  <div
    class="
      aspect-[16/9]
      bg-gray-200
      overflow-hidden
      relative
      rounded-lg
      w-full
    "
  >
    <% if listing.default_image&.file&.attached? %>
      <%= image_tag(listing.default_image.file.variant(resize_to_limit: [1200, 800]), class: "w-full h-full object-cover") %>
    <% end %>

    <a
      class="
        absolute
        bg-slate-900
        bottom-4
        rounded-lg
        py-2
        px-3
        right-4
        text-white
        text-md
      "
      href="<%= images_v1_listing_path(listing) %>"
    >
      <i class="fa-regular fa-user"></i>
      View Gallery
    </a>
  </div>
</div>