<a
  class="
    aspect-square
    flex
    rounded-lg
    overflow-hidden
    w-full
  "
  href="<%= gallery_v1_place_path(image_id: image.id) %>"
>
  <% if image.file&.attached? %>
    <%= image_tag(image.file.variant(resize_to_limit: [300, 300]), class: "w-full h-full object-cover") %>
  <% end %>
</a>
