<article
  class="
    flex
    items-center
    gap-2
    w-full
  "
  id="<%= dom_id(place) %>"
>
  <div class="w-16 h-16 bg-gray-200 rounded-lg"></div>

  <div class="flex flex-col justify-center">
    <span class="font-md"><%= place.title %></span>
    <span class="text-sm">
      <%= place.place_type.title %>
      <span>in</span>
      <%= place.geo_region.title %>
    </span>
  </div>

  <div class="flex gap-1 ml-auto">
    <%= component("Button",
      attributes: {
        href: edit_v1_dashboard_place_path(place),
      },
      variant: :outline,
      size: :sm,
    ) { "Edit" } %>
  </div>
</article>
