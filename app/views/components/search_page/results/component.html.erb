<section>
  <h2 class="text-2xl font-bold">Results</h2>

  <div
    class="
      grid
      grid-cols-3
      gap-8
      mt-4
    "
  >
    <% results.each do |result| %>
      <% if result.is_a?(Listing) %>
        <%= component("ListingTile", listing: result) %>
      <% elsif result.is_a?(Place) %>
        <%= component("PlaceTile", place: result) %>
      <% end %>
    <% end %>
  </div>
</section>