<%= component("DashboardLayout", alert: alert, notice: notice) do %>
  <%= component("DashboardLayout/Content_Container") do |container| %>
    <% container.with_header_content(title: "Edit Listing") do |header| %>
      <% header.with_heading_right do %>
        <%= component("Button",
          attributes: {
            href: v1_dashboard_listings_path,
          },
          variant: :primary,
          size: :sm,
        ) { "Back" } %>
      <% end %>
    <% end %>

    <% container.with_main_content do %>
      <div class="w-full max-w-[640px]">
      <%= render partial: "v1/dashboard/listings/form", locals: {
        listing: @listing,
        listing_types: @listing_types,
        places: @places,
      } %>
    <% end %>
  <% end %>
<% end %>